  <content>{{template name="job_macros.vm"/}}

{{velocity output='false'}}
#set($jobId = ['gdpr', 'singleton'])
#set($jobStatus = $services.job.getJobStatus(['gdpr', 'singleton']))
#macro (displayGDPRForm)
  #if($jobStatus.state == 'RUNNING')
    {{info}}$services.localization.render('gdpr.admin.running'){{/info}}
    #GDPRLogging()
  #else
    #if($jobStatus.state == 'FINISHED' &amp;&amp; "$!request.action" != 'protectUserProfiles')
      {{success}}$services.localization.render('gdpr.admin.finished'){{/success}}
    #end

    {{html clean="false"}}
    &lt;div id="admin-protectUserProfiles">
      &lt;form class="xform half" action="$xwiki.relativeRequestURL" method="post">
        &lt;div class="hidden">
          &lt;input type="hidden" name="form_token" value="$services.csrf.token" />
          &lt;input type="hidden" name="action" value="protectUserProfiles" />
        &lt;/div>
        &lt;fieldset>
          &lt;legend>$services.localization.render('gdpr.admin.protect.userprofiles.legend')&lt;/fieldset>
          &lt;dl>
            &lt;label for="secureUserProfile">$services.localization.render('gdpr.admin.protect.userprofiles.label')&lt;/label>
            &lt;dt>
              &lt;span class="xHint">$services.localization.render('gdpr.admin.protect.userprofiles.hint')&lt;/span>
            &lt;/dt>
            &lt;dd>
              &lt;div class="buttonwrapper">
                &lt;input type="submit" class="button" value="$services.localization.render('gdpr.admin.submit')" />
              &lt;/div>
            &lt;/dd>     
        &lt;/fieldset>
      &lt;/form>
      &lt;/div>   
    {{/html}}
  #end
#end

#macro(handleGDPRAction $withValidToken)
  #set ($exception = $xcontext.lastexception)
  #if ("$!exception" != '')
    #set ($message = "$stringtool.capitalize($request.action) failed: $exception.message ($exception.class)")
    #if ($isAjaxRequest)
      $response.sendError(500, $message)
    #else
      {{error}}$message{{/error}}
    #end
  #elseif($request.xpage == 'plain' &amp;&amp; $request.outputSyntax == 'plain' &amp;&amp; $request.getJobStatus == '1')
    $jobStatus
  #else
    #displayGDPRForm()
    #if ($withValidToken &amp;&amp; "$!request.action" == 'protectUserProfiles')
      $services.gdpr.protectUserProfiles()
      #GDPRLogging()
    #end
  #end
#end

#macro(GDPRLogging)  
  #set ($discard = $xwiki.jsx.use('GDPR.Code.GDPRAdmin'))
  #if($jobStatus)
    #set ($jobStatusURL = $xwiki.getURL('GDPR.Code.GDPRAdmin', 'get', $escapetool.url({ 'outputSyntax': 'plain', 'syntax': 'plain', 'getJobStatus' : '1' })))
    #set($finished = $jobStatus.state == 'FINISHED')

    {{html clean="false"}}
      &lt;div class="xcontent job-status" data-url="$jobStatusURL">
        #displayJobProgressBar($jobStatus)
        #if (!$finished)          
          #if ($jobStatus &amp;&amp; $jobStatus.log.isEmpty() &amp;&amp; $jobStatus.state == 'NONE')
            &lt;p class="ui-progress-message">
              $services.localization.render('gdpr.admin.protect.log.message.waiting')
            &lt;/p>
          #end
        #else
          #if ($jobStatus.log.getLogs('ERROR').isEmpty())
            &lt;div class="box successmessage">
              $services.localization.render('gdpr.admin.protect.log.message.success')
            &lt;/div>
          #else
            &lt;div class="box errormessage">
              $services.localization.render('gdpr.admin.protect.log.message.errors')
            &lt;/div>
          #end
        #end
        #displayJobStatusLog($jobStatus true)
      &lt;/div>
    {{/html}}
  #end
#end

#macro (handleGDPRRequest)
  #if (!$hasGlobalAdmin)    
    {{error}}$services.localization.render('gdpr.admin.error.notallowed'){{/error}}
  #elseif ($request.form_token)
    #if ($services.csrf.isTokenValid($request.form_token))
      #handleGDPRAction(true)
    #elseif ($isAjaxRequest)
      $response.sendError(401, 'CSRF token verification failed!')
    #else
      $response.sendRedirect($services.csrf.getResubmissionURL())
    #end
  #else
    #handleGDPRAction(false)
  #end
#end
{{/velocity}}

{{velocity}}
#set ($isAjaxRequest = $request.getHeader('X-Requested-With') == 'XMLHttpRequest')
#handleGDPRRequest()
{{/velocity}}</content>
